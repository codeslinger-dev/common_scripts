# ----------------------------------------------------------------------------
# Store selected contents of this file in:
#    <your-git-project-root>/.gitattributes
# ----------------------------------------------------------------------------


# ----------------------------------------------------------------------------
# Set .git text files to 'lf'
# ----------------------------------------------------------------------------
.gitattributes text eol=lf
.gitignore     text eol=lf
.gitmodules    text eol=lf
.gitlab-ci.yml text eol=lf
LICENSE        text eol=lf

# ----------------------------------------------------------------------------
# Set most text files to 'lf'
# ----------------------------------------------------------------------------
#
*.bash    text eol=lf
*.c       text eol=lf
*.cmake   text eol=lf
*.cpp     text eol=lf
*.csv     text eol=lf
*.f       text eol=lf
*.f90     text eol=lf
*.for     text eol=lf
*.h       text eol=lf
*.m       text eol=lf
*.md      text eol=lf
*.mk      text eol=lf
*.py      text eol=lf
*.sh      text eol=lf
*.txt     text eol=lf
*.yml     text eol=lf
*.zsh     text eol=lf
Makefile  text eol=lf

# ----------------------------------------------------------------------------
# Set .vim text files to 'lf' (works w/ both Linux and Windows)
# ----------------------------------------------------------------------------
*.vim     text eol=lf
.vimrc    text eol=lf
.gvimrc   text eol=lf

# ----------------------------------------------------------------------------
# Set MS Visual Studio files to 'crlf'
# ----------------------------------------------------------------------------
*.csproj  text eol=crlf
*.vcproj  text eol=crlf
*.vcxproj text eol=crlf
*.sln     text eol=crlf
*.props   text eol=crlf
*.filters text eol=crlf

# ----------------------------------------------------------------------------
# Set MS Windows common files to 'crlf'
# ----------------------------------------------------------------------------
*.bat     text eol=crlf
*.cmd     text eol=crlf
*.ps1     text eol=crlf

# ----------------------------------------------------------------------------
# Graphics
# ----------------------------------------------------------------------------
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.tif     binary
*.tiff    binary
*.ico     binary

# ----------------------------------------------------------------------------
# Archives
# ----------------------------------------------------------------------------
*.7z      binary
*.gz      binary
*.tar     binary
*.tgz     binary
*.zip     binary

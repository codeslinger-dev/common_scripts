# ----------------------------------------------------------------------------
# -- BASH Aliases (Git) ------------------------------------------------------
#
# This file defines the Git command aliases to be used in a Bash session.
#
# This file is intended to be "sourced" by .bashrc (or similar):
#
#    if [ -f /<path>/.bash_aliases_git ]; then
#     source /<path>/.bash_aliases_git
#    fi
#
# ----------------------------------------------------------------------------


# -- Utilities ---------------------------------------------------------------
#

# Git:  Show current branch name
alias git-show-branch-name='git rev-parse --symbolic-full-name --abbrev-ref HEAD'
alias                 gsbn='git rev-parse --symbolic-full-name --abbrev-ref HEAD'


# -- STATUS ------------------------------------------------------------------
#

# Git:  Status
alias        git-status='_git_status'
alias                gs='_git_status'

# Git:  Status (short)
alias  git-status-short='_git_status_short'
alias               gss='_git_status_short'


# -- ADD ---------------------------------------------------------------------
#

# Git:  Add
alias      git-add='_git_add'
alias           ga='_git_add'

# Git:  Add all (w/ confirmation)
alias  git-add-all='_git_add_all'
alias          gaa='_git_add_all'


# -- CHERRY PICK -------------------------------------------------------------
#

# Git:  Cherry-pick
alias         git-cherry-pick='_git_cherry_pick'
alias                     gcp='_git_cherry_pick'

# Git:  Cherry-pick (w/ commit message append)
alias  git-cherry-pick-append='_git_cherry_pick_append'
alias                    gcpa='_git_cherry_pick_append'


# -- COMMIT ------------------------------------------------------------------
#

# Git:  Commit
alias                git-commit='_git_commit'
alias                        gc='_git_commit'

alias        git-commit-message='_git_commit_message'
alias                       gcm='_git_commit_message'

alias  git-commit-amend-message='_git_commit_amend_message'
alias                      gcam='_git_commit_amend_message'


# -- BRANCH ------------------------------------------------------------------
#

# Git:  Branch
alias         git-branch='_git_branch'
alias                 gb='_git_branch'

# Git:  Branch Delete
alias  git-branch-delete='_git_branch_delete'
alias                gbd='_git_branch_delete'


# -- CHECKOUT ----------------------------------------------------------------
#

# Git:  Checkout existing branch
alias         git-checkout='_git_checkout'
alias                  gco='_git_checkout'

# Git:  Checkout new branch (w/ confirmation)
alias  git-checkout-branch='_git_checkout_branch'
alias                 gcob='_git_checkout_branch'


# -- DIFF --------------------------------------------------------------------
#

# Git:  Diff (working directory vs staged)
alias              git-diff='_git_diff'
alias                    gd='_git_diff'

# Git:  Diff summary (working directory vs staged)
alias      git-diff-summary='_git_diff_summary'
alias                   gds='_git_diff_summary'

# Git:  Diff All (working directory vs HEAD)
alias          git-diff-all='_git_diff_all'
alias                   gda='_git_diff_all'

# Git:  Diff All Summary (working directory vs HEAD)
alias  git-diff-all-summary='_git_diff_all_summary'
alias                  gdas='_git_diff_all_summary'


# -- LOG ---------------------------------------------------------------------
#

# Git:  Log
alias                  git-log='_git_log'
alias                       gl='_git_log'

# Git:  Log w/ graph
alias            git-log-graph='_git_log_graph'
alias                      glg='_git_log_graph'
alias                   git-lg='_git_log_graph'

# Git:  Log w/ graph (+detail)
alias   git-log-graph-detailed='_git_log_graph_detailed'
alias                     glgd='_git_log_graph_detailed'
alias                  git-llg='_git_log_graph_detailed'
alias                  git-lgd='_git_log_graph_detailed'

# Git:  Log w/ one-line
alias          git-log-oneline='_git_log_oneline'
alias          git-log-compact='_git_log_oneline'
alias                      glc='_git_log_oneline'
alias                   git-ll='_git_log_oneline'

# Git:  Log w/ one-line (+detail)
alias git-log-oneline-detailed='_git_log_oneline_detailed'
alias git-log-compact-detailed='_git_log_oneline_detailed'
alias                     glcd='_git_log_oneline_detailed'
alias                  git-lld='_git_log_oneline_detailed'


# -- SHOW --------------------------------------------------------------------
#

# Git:  Show (commit details)
alias         git-show='_git_show'
alias              gsh='_git_show'

# Git:  Show (commit summary)
alias git-show-summary='_git_show_summary'
alias             gshs='_git_show_summary'


# -- STASH -------------------------------------------------------------------
#

# Git:  Stash
alias       git-stash='_git_stash'
alias             gst='_git_stash'

# Git:  Stash List
alias  git-stash-list='_git_stash_list'
alias            gstl='_git_stash_list'

# Git:  Save requested stash (aka: push to stash stack)
alias  git-stash-save='_git_stash_save'
alias            gsts='_git_stash_save'

# Git:  Pop requested stash (aka: pop from  stash stack)
alias   git-stash-pop='_git_stash_pop'
alias            gstp='_git_stash_pop'

# Git:  Apply requested stash to working directory
alias git-stash-apply='_git_stash_apply'
alias            gsta='_git_stash_apply'

# Git:  Drop requested stash (w/ confirmation)
alias  git-stash-drop='_git_stash_drop'
alias            gstd='_git_stash_drop'


# -- PULL --------------------------------------------------------------------
#

# Git:  Pull
alias        git-pull='_git_pull'
alias              gp='_git_pull'

# Git:  Pull (w/ rebase)
alias git-pull-rebase='_git_pull_rebase'
alias             gpr='_git_pull_rebase'


# -- PUSH --------------------------------------------------------------------
#

# Git:  Push
alias                git-push='_git_push'
alias                   gpush='_git_push'

# Git:  Push branch (current)
alias         git-push-branch='_git_push_branch'
alias                  gpushb='_git_push_branch'

# Git:  Push branch (by name)
alias git-push-branch-by-name='_git_push_branch_by_name'
alias                 gpushbn='_git_push_branch_by_name'



# -- MERGE -------------------------------------------------------------------
#

# Git:  Merge (no fast-forward)
alias     git-merge='_git_merge'
alias            gm='_git_merge'

# Git:  Merge (only fast-forward)
alias  git-merge-ff='_git_merge_ff'
alias          gmff='_git_merge_ff'


# -- End of File  ------------------------------------------------------------
# ----------------------------------------------------------------------------
